{
  "name": "hair",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.4",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "typescript": "^3.8.3",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "watch:server-js": "cd ./backend && nodemon ./dist/server.js",
    "watch:server-ts": "cd ./backend && tsc -w",
    "server": "concurrently \"npm:watch:server-js\" \"npm:watch:server-ts\"",
    "start": "concurrently \"npm:server\" \"npm:frontend\"",
    "frontend": "react-scripts start",
    "build": "react-scripts build",
    "eslint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^7.0.2",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3"
  }
}
